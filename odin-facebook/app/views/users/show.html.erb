<p id="notice"><%= notice %></p>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <% if @user.avatar.exists? %>
          <%= image_tag @user.avatar.url(:thumb) %>
        <% else %>
          <%= gravatar_for @user %>
        <% end %>
        <%= "#{@user.first_name} #{@user.last_name}" %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render @feed_items %>
  </div>
</div>

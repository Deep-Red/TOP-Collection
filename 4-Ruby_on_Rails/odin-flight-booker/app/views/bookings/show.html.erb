<% provide @booking, @passengers %>
<h1>Your flight is booked!</h1>
<p><%= "Booking number #{@booking.id}" %></p>
<p><%= "From #{@booking.flight.origin.code} to #{@booking.flight.destination.code}" %></p>
<p><%= "On #{@booking.flight.flight_date_formatted}" %></p>
<p><%= "For #{@passengers.count} passengers:" %></p>
<table>
  <tr><th>Name</th><th>Email</th></tr>
  <% @passengers.each do |p| %>
    <%= render :partial => "bookings/passenger_info", :locals => { :passenger => p} %>
  <% end %>
</table>

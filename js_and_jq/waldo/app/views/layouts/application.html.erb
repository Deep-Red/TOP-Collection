<!DOCTYPE html>
<html>
  <head>
    <title>Waldo</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if !flash.empty? %>
    <div id="flash">
      <% flash.keys.each do |k| %>
      <div class="<%= k %>">
        <%= flash[k] %>
      </div>
      <% end %>
    </div>
    <% end %>
    <div id="modal-holder"></div>
    <%= yield %>
  </body>
</html>
